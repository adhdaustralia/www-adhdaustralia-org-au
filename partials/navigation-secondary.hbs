<div class="footer-sections">
  <div class="footer-section">
    <h4>Quick Links</h4>
    <nav class="footer-nav">
      <ul class="footer-nav-list">
        {{#navigation type="primary"}}
          <li class="footer-nav-item">
            <a 
              href="{{url}}" 
              class="footer-nav-link" 
              {{#if target}}target="{{target}}" rel="noopener"{{/if}}
            >
              {{label}}
            </a>
          </li>
        {{/navigation}}
      </ul>
    </nav>
  </div>

  <div class="footer-section">
    <h4>Get Involved</h4>
    <nav class="footer-nav">
      {{navigation type="secondary"}}
    </nav>
  </div>

  <div class="footer-section">
    <h4>Resources</h4>
    <ul class="footer-menu">
      {{#get "tags" filter="slug:-adhders+slug:-education+slug:-employment+slug:-family+slug:-health+slug:-justice" limit="all"}}
        {{#foreach tags}}
          <li><a href="{{url}}">{{name}}</a></li>
        {{/foreach}}
      {{/get}}
    </ul>
  </div>

  <div class="footer-section">
    <h4>For You</h4>
    <ul class="footer-menu">
      {{#get "tags" filter="slug:[adhders,education,employment,family,health,justice]" limit="all"}}
        {{#foreach tags}}
          <li><a href="{{url}}">{{name}}</a></li>
        {{/foreach}}
      {{/get}}
    </ul>
  </div>
</div>
