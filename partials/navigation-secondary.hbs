<div class="footer-sections">
  <div class="footer-section">
    <h4>Get Involved</h4>
    <nav class="footer-nav">
      {{navigation type="secondary"}}
    </nav>
  </div>

  <div class="footer-section">
    <h4>Resources</h4>
    <ul class="footer-menu">
      {{#get "tags" filter="slug:-education+slug:-employment+slug:-health+slug:-justice+slug:-parents-carers+slug:-personal" limit="all"}}
        {{#foreach tags}}
          <li><a href="{{url}}">{{name}}</a></li>
        {{/foreach}}
      {{/get}}
    </ul>
  </div>

  <div class="footer-section">
    <h4>For You</h4>
    <ul class="footer-menu">
      {{#get "tags" filter="slug:[education,employment,health,justice,parents-carers,personal]" limit="all"}}
        {{#foreach tags}}
          <li><a href="{{url}}">{{name}}</a></li>
        {{/foreach}}
      {{/get}}
    </ul>
  </div>
</div>
